<h1>What subject and semester are you surveying?</h1>

<%= form_tag user_surveys_path(@user) do %>
  <fieldset>
    <div>
      <%= label_tag "[survey]subject", "Subject:" %>
      <%= text_field_tag '[survey]subject' %>
    </div>
    <div>
      <%= label_tag '[survey]semester', 'Semester:' %>
      <%= text_field_tag '[survey]semester' %>
    </div>
    <div>
      <%= label_tag '[survey]size', 'Number of Students:' %>
      <%= number_field_tag '[survey]size' %>
    </div>
  </fieldset>
  <fieldset>
    <div>
    <%= label_tag '[survey]password', 'Survey Passcode:' %>
    <%= password_field_tag '[survey]password' %>
    <%= submit_tag "Submit" %>
    </div>
  </fieldset>
  
<% end %>